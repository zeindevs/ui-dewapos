<section
  id="right-order"
  class="d-flex flex-column justify-content-between p-3 bg-white border-start col-12 col-md-5 col-xl-4"
>
  <div class="d-flex flex-column flex-fill overflow-hidden">
    <div class="d-flex align-items-center justify-content-between">
      <h4 class="fw-bold">Order</h4>
      <a href="#" class="small text-danger">
        Clear Order <i class="fa fa-trash"></i>
      </a>
    </div>
    <div class="border-top my-2"></div>
    <div id="order-list" class="overflow-y-auto">
      <ul class="list-unstyled d-flex flex-column">
        <%- include('_right-order-item', { name: 'America Burger'}) -%>
        <%- include('_right-order-item', { name: 'Mexican Burger'}) -%>
        <%- include('_right-order-item', { name: 'Original Burger'}) -%>
        <%- include('_right-order-item', { name: 'Europe Burger'}) -%>
        <%- include('_right-order-item', { name: 'Original Burger'}) -%>
      </ul>
    </div>
  </div>
  <div class="border-top my-2"></div>
  <div class="input-group">
    <input type="text" class="form-control" name="coupon" placeholder="Voucher Code" />
    <button class="btn btn-secondary">
      <i class="fa fa-qrcode"></i>
    </button>
    <button class="btn btn-warning">Apply</button>
  </div>
  <div class="border-top my-2"></div>
  <div class="d-flex flex-column gap-1 py-1">
    <div class="d-flex justify-content-between">
      <h6 class="m-0 fw-medium">Sub Total</h6>
      <h6 class="m-0 fw-bold">Rp 27.00</h6>
    </div>
    <div class="d-flex justify-content-between">
      <h6 class="m-0 fw-medium">Tax (11%)</h6>
      <h6 class="m-0 fw-bold">Rp 3.00</h6>
    </div>
    <div class="d-flex justify-content-between">
      <h6 class="m-0 fw-medium">Discount</h6>
      <h6 class="m-0 fw-bold">Rp 0.00</h6>
    </div>
  </div>
  <div class="border-top my-2"></div>
  <div class="d-flex flex-column gap-3">
    <div class="d-flex justify-content-between">
      <h4 class="m-0 fw-bold">Total</h4>
      <h4 class="m-0 fw-bold">Rp 30.00</h4>
    </div>
    <button class="btn btn-danger py-2 col-12">Place Order</button>
  </div>
</section>